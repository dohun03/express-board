<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"/>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <title>Node JS</title>
  <style>
    html { height: 100%; }
    body { height: 100%; margin: 0; padding: 0; }
    .__body__ { padding: 120px 340px 40px 340px; height:100%; background-color:#f0f0f0; overflow: auto; /* 내용이 넘칠 경우 스크롤바 표시 */ }
    
    /* 미디어 쿼리를 사용하여 화면 크기에 따라 스타일 변경 */
    @media (max-width: 768px) {
        .__body__ {
            padding: 80px 20px; /* 작은 화면에서 패딩 조정 */
        }
    }
    .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
    }
    .none {
        display:none;
    }
    .settings-container {
            max-width: 700px;
            margin: 50px auto;
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .nav-pills .nav-link {
            color: #333;
            font-weight: 500;
        }
        .nav-pills .nav-link.active {
            background-color: #03C75A; /* 네이버 색상 */
        }
        .profile-img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
        }
  </style>
</head>
<body>
  <div class="__header__"></div>
  <div class="__body__">
    <div class="container settings-container">
      <h3 class="text-center mb-4">사용자 설정</h3>
  
      <!-- 네비게이션 탭 -->
      <ul class="nav nav-pills mb-3 justify-content-center" id="settings-tabs">
          <li class="nav-item">
              <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#profile">프로필</button>
          </li>
          <li class="nav-item">
              <button class="nav-link" data-bs-toggle="pill" data-bs-target="#security">보안 설정</button>
          </li>
          <li class="nav-item">
              <button class="nav-link" data-bs-toggle="pill" data-bs-target="#notifications">개인 설정</button>
          </li>
      </ul>
  
      <div class="tab-content">
          <!-- 프로필 설정 -->
          <div class="tab-pane fade show active" id="profile">
              <div class="text-center">
                  <img src="https://via.placeholder.com/80" class="profile-img mb-3" alt="프로필 이미지">
                  <input type="file" class="form-control mb-3" accept="image/*">
              </div>
              <div class="mb-3">
                  <label class="form-label">이름</label>
                  <input type="text" class="form-control username" pattern="[A-Za-z0-9가-힣]{2,12}" placeholder="변경할 닉네임을 입력 하십시오">
              </div>
              <button class="btn btn-success username w-100">저장</button>
          </div>
  
          <!-- 보안 설정 -->
          <div class="tab-pane fade" id="security">
              <div class="mb-3">
                  <label class="form-label">현재 비밀번호</label>
                  <input type="password" class="form-control password">
              </div>
              <div class="mb-3">
                  <label class="form-label">새 비밀번호</label>
                  <input type="password" pattern="[A-Za-z0-9]{4,20}" class="form-control new-password">
              </div>
              <div class="mb-3">
                  <label class="form-label">새 비밀번호 확인</label>
                  <input type="password" class="form-control confirm-password">
              </div>
              <button class="btn btn-danger w-100 password">비밀번호 변경</button>
          </div>
  
          <!-- 알림 설정 -->
          <div class="tab-pane fade" id="notifications">
              <div class="form-check form-switch mb-3">
                  <input class="form-check-input" type="checkbox" id="emailNotif" checked>
                  <label class="form-check-label" for="emailNotif">이메일 알림</label>
              </div>
              <div class="form-check form-switch mb-3">
                  <input class="form-check-input" type="checkbox" id="smsNotif">
                  <label class="form-check-label" for="smsNotif">SMS 알림</label>
              </div>
              <div class="form-check form-switch mb-3">
                  <input class="form-check-input" type="checkbox" id="pushNotif" checked>
                  <label class="form-check-label" for="pushNotif">푸시 알림</label>
              </div>
              <button class="btn btn-primary w-100">저장</button>
          </div>
      </div>
  </div>
  </div>
</body>
<script>
  fetch("/header")
    .then(response => response.text())
    .then(data => document.querySelector(".__header__").innerHTML = data);

  $(".btn.username").on("click", function() {
    const username = $("input.username").val();
    $.ajax({
      url: '/settings/username',
      method: 'PATCH',
      data: { 
        username
      },
      success: function(response) {
        document.location.href = '/';
        console.log(response);
      },
      error: function(xhr, status, error) {
        console.log('입력 오류:', xhr.responseText);
        alert(xhr.responseText);
      }
    });
  });

  $(".btn.password").on("click", function() {
    const password = $("input.password").val();
    const newPassword = $("input.new-password").val();
    const confirmPassword = $("input.confirm-password").val();
    if(newPassword === confirmPassword){
      $.ajax({
        url: '/settings/password',
        method: 'PATCH',
        data: { 
          password,
          newPassword
        },
        success: function(response) {
          alert(response)
          document.location.href = '/';
          console.log(response);
        },
        error: function(xhr, status, error) {
          console.log('입력 오류:', xhr.responseText);
          alert(xhr.responseText);
        }
      });
    } else {
      alert("새 비밀번호를 다시 확인하시기 바랍니다.");
    }
  });
</script>
</html>